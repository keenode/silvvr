{% import 'view/macro/render.njk' as render %}

<section id="section-code" class="sg-section">
  <div class="sg-container">

    {# ----------------------------------------------------
        6. Code
        --------------------------------------------------- #}
    {{ render.sectionPartial('section-heading', { title: '6. Code' }) }}

    {# --- Inline Code ------------------------------------ #}
    {{ render.sectionPartial(
      'section-block', {
        heading: 'Inline Code',
        description: 'Wrap inline snippets of code with <code>&lt;code&gt;</code>.',
        exampleCode: '<p>For example, <code>&lt;section&gt;</code> should be wrapped as inline.</p>'
      }
    ) }}

    {# --- User Input ------------------------------------- #}
    {{ render.sectionPartial(
      'section-block', {
        heading: 'User Input',
        description: 'Use the <code>&lt;kbd&gt;</code> to indicate input that is typically entered via keyboard.',
        exampleCode: '<p>To switch directories, type <kbd>cd</kbd> followed by the name of the directory.<br>
                      To edit settings, press <kbd><kbd>ctrl</kbd> + <kbd>,</kbd></kbd></p>'
      }
    ) }}

    {# --- Block ------------------------------------------ #}
    {{ render.sectionPartial(
      'section-block', {
        heading: 'Block',
        description: 'Use <code>&lt;pre&gt;</code> for multiple lines of code. Be sure to escape any angle brackets in the code for proper rendering.',
        exampleCode: '<pre>&lt;p&gt;Sample text here...&lt;/p&gt;</pre>'
      }
    ) }}

    {# --- Variables -------------------------------------- #}
    {{ render.sectionPartial(
      'section-block', {
        heading: 'Variables',
        description: 'For indicating variables use the <code>&lt;var&gt;</code> tag.',
        exampleCode: '<var>y</var> = <var>m</var><var>x</var> + <var>b</var>'
      }
    ) }}

    {# --- Sample Output ---------------------------------- #}
    {{ render.sectionPartial(
      'section-block', {
        heading: 'Sample Output',
        description: 'For indicating blocks sample output from a program use the <code>&lt;samp&gt;</code> tag.',
        exampleCode: '<samp>This text is meant to be treated as sample output from a computer program.</samp>'
      }
    ) }}

  </div> {# .sg-container #}
</section> {# .sg-section #}
